{
	"name": "Transformcsv",
	"properties": {
		"type": "MappingDataFlow",
		"typeProperties": {
			"sources": [
				{
					"dataset": {
						"referenceName": "DataFlowSource",
						"type": "DatasetReference"
					},
					"name": "sourceCsv"
				}
			],
			"sinks": [
				{
					"dataset": {
						"referenceName": "DataflowSink",
						"type": "DatasetReference"
					},
					"name": "sink"
				}
			],
			"transformations": [
				{
					"name": "selectCols"
				},
				{
					"name": "filterRows"
				},
				{
					"name": "Visa"
				},
				{
					"name": "derivedColumn1"
				},
				{
					"name": "aggregate1"
				},
				{
					"name": "alterRow1"
				}
			],
			"scriptLines": [
				"source(output(",
				"          transaction_id as short,",
				"          transactional_date as timestamp,",
				"          product_id as string,",
				"          customer_id as short,",
				"          payment as string,",
				"          credit_card as long,",
				"          loyalty_card as boolean,",
				"          cost as double,",
				"          quantity as short,",
				"          price as double",
				"     ),",
				"     allowSchemaDrift: true,",
				"     validateSchema: false,",
				"     ignoreNoFilesFound: false) ~> sourceCsv",
				"sourceCsv select(mapColumn(",
				"          transaction_id,",
				"          transactional_date,",
				"          product_id,",
				"          customer_id,",
				"          payment,",
				"          credit_card,",
				"          loyalty_card,",
				"          cost,",
				"          quantity,",
				"          price",
				"     ),",
				"     skipDuplicateMapInputs: true,",
				"     skipDuplicateMapOutputs: true) ~> selectCols",
				"selectCols filter(customer_id == 4) ~> filterRows",
				"filterRows split(payment=='visa',",
				"     payment=='mastercard',",
				"     disjoint: false) ~> Visa@(visa, mastercard, amex)",
				"Visa@amex derive(payment = coalesce(payment,'N/A')) ~> derivedColumn1",
				"Visa@visa aggregate(groupBy(product_id),",
				"     p = max(product_id)) ~> aggregate1",
				"aggregate1 alterRow(insertIf(1==1)) ~> alterRow1",
				"alterRow1 sink(allowSchemaDrift: true,",
				"     validateSchema: false,",
				"     umask: 0022,",
				"     preCommands: [],",
				"     postCommands: [],",
				"     skipDuplicateMapInputs: true,",
				"     skipDuplicateMapOutputs: true) ~> sink"
			]
		}
	}
}